        <div></div>
       
</MainLayout>
<style>
     @keyframes moveGradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .gradient-border{
            position: relative;
            
        }

        .gradient-border::before{
            content: "";
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            border-radius: 12px;
            background: linear-gradient(45deg, #ff0000, #946844, #615f50, #6a865f, #5faca6, #535e7c, #8000ff, #ff00ff);
            background-size: 300% 300%;
            animation: moveGradient 3s linear infinite;
            z-index: -1;
        }
        .gradient-border:hover {
            box-shadow: 0px 0px 25px rgba(49, 21, 112, 0.6), 0px 0px 40px rgba(76, 78, 155, 0.4);
            
        }
        .inner-box {
            position: relative;
            background-color: #0e0202;
            border-radius: 10px;
            z-index: 1;
            box-shadow: 0px 0px 25px rgba(255, 0, 255, 0.3,0px 0px 40px rgba(88, 141, 141, 0.9));

        }
        .inner-box:hover {
            box-shadow: 0px 0px 40px rgba(160, 161, 161, 0.9);
        }

</style>

