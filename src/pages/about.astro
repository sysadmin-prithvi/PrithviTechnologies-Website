---
import MainLayout from "@/layouts/MainLayout.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import { partnersData, SITE } from "@/data_files/constants";

const pageTitle: string = `About | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <section class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400">
      Why XEqualsAI
    </h1>
    <p class="mt-4 text-neutral-300 max-w-3xl">
      We transform raw datasets into high-impact labeled assets using advanced automation, robust infrastructure, and expert annotators. From secure intake to rapid delivery, we support enterprise-scale AI programs with precision, speed, and auditability.
    </p>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8">
    <div class="grid gap-6 sm:grid-cols-3">
      <div class="rounded-xl border border-borderBlue/40 bg-black/40 p-6">
        <h3 class="text-white text-xl font-semibold">XEqualsAI in Numbers</h3>
        <ul class="mt-3 text-neutral-300 text-sm space-y-1">
          <li>86,000+ frames and images processed</li>
          <li>200,000+ objects labeled</li>
          <li>695+ annotation hours</li>
          <li>>95% accuracy through multi-stage QC</li>
        </ul>
      </div>
      <div class="rounded-xl border border-borderBlue/40 bg-black/40 p-6">
        <h3 class="text-white text-xl font-semibold">Tooling, Automation & QC</h3>
        <p class="mt-3 text-neutral-300 text-sm">
          In-house QC pipelines, automated validation checks, and custom annotation tools deliver quality, speed, and auditability across projects.
        </p>
      </div>
      <div class="rounded-xl border border-borderBlue/40 bg-black/40 p-6">
        <h3 class="text-white text-xl font-semibold">End-to-End Delivery</h3>
        <p class="mt-3 text-neutral-300 text-sm">
          Secure intake, scalable infrastructure, dedicated PMs, and rapid delivery cycles designed for enterprise AI teams.
        </p>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8 mt-12">
    <h2 class="text-2xl md:text-3xl font-bold text-white">Our Clients Succeed</h2>
    <p class="mt-3 text-neutral-300">See the journey from raw field images to market-ready AI, in partnership with H2L Robotics.</p>
    <div class="mt-6 rounded-xl overflow-hidden border border-borderBlue/40 bg-black">
      <img src="/image.png" alt="H2L Robotics case study" class="w-full h-auto" />
    </div>
  </section>

  <ClientsSection title="Trusted by teams shipping real-world AI" subTitle="Logos are placeholders" partners={partnersData} />

  <footer class=" text-white py-8 px-6 md:px-12 mt-10 text-center">
    <p class="text-sm">Â© 2024 XEqualsAI. All rights reserved.</p>
  </footer>

</MainLayout>


