<style>
   #scrollableDiv {
            scrollbar-width: none; /* Firefox */
        }
        #scrollableDiv::-webkit-scrollbar {
            display: none; /* Chrome, Safari */
        }
</style>
<script is:inline>
    const scrollableDiv = document.getElementById("scrollableDiv");

        scrollableDiv.addEventListener("mouseEnter", () => {
            document.body.style.overflow = "hidden"; // Disable page scroll
        });

        scrollableDiv.addEventListener("mouseleave", () => {
            document.body.style.overflow = "auto"; // Enable page scroll when mouse leaves
        });

        scrollableDiv.addEventListener("wheel", (e) => {
            // Scroll the div manually
            scrollableDiv.scrollTop += e.deltaY;
            e.preventDefault(); // Prevent page scrolling
        });
    </script>