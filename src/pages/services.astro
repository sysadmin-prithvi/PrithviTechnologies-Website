  <style>
    .tab{
      overflow:hidden;
    }
    .tab-button{
      cursor: pointer;
      tansition:0.3s;
      
    }
    .tab-button:hover{
      /* border: 2px solid rgb(97, 86, 86); */
      border-radius: 5px;
      background-color: rgb(33, 56, 77);

    }
    .tab-mov{
      position: relative;
      cursor: pointer;
    }

    .bottom-line {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 3px;
      /* padding: 2px; */
      background-color: #8bc0f1;
      transition: width 0.3s ease-in-out;
    }
    .tab-mov:hover .bottom-line{
      /* border-bottom: 2px solid white; */
      /* transition: 0.3s; */
      /* transition: width 0.3s ease-in-out; */
      width:100%
    }
    .active-button{
      background-color: #21384d;
    }
    .title-font{
      font-family: "Euclidcirculara, sans-serif";
    }
    .number-card{
      color: #7d6eeb;
      font-size: 20px;
      font-weight: 600;
      line-height: 25px;
    }
    
  </style>

  <script is:inline>

    function getAnnotation(evt,annotationType,id){
      var i,tabContent,tabLinks;
      tabContent = document.getElementsByClassName("tab-content");
      for(i=0;i<tabContent.length;i++){
        tabContent[i].style.display = "none";
      }
      tabLinks = document.getElementsByClassName('tab-links');
      for(i=0;i<tabLinks.length;i++){
        tabLinks[i].className = tabLinks[i].className.replace(" active","")
      }
      document.getElementById(annotationType).style.display = "block"
      evt.className+="active";
      // evt.body.tab-LinkButton.style.background-color="green"
      let type=document.getElementById(id)
      type.classList.add('active-button')
      
    }
  </script>

